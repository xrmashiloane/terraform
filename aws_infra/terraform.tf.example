#Required variables for Terraform Cloud
terraform {
  required_providers {
    aws = {
      source = "hashicorp/aws"
    }
  }
  #Only required for Terraform Cloud runs
  #Create organisation and workspace, more details here: https://developer.hashicorp.com/terraform/cloud-docs/users-teams-organizations/organizations
  cloud {
    organization = <{ REPLACE WITH OWN ORGANISATION DETAILS }>

    workspaces {
      name = <{ REPLACE WITH OWN WORKSPACE DETAILS }>
    }
  }
}

provider "aws" {
  # Configuration options
  region = <{ REPLACE WITH AWS REGION DETAILS }>
}

#Declare API key as secret variable to prevent leakage. Add .env variable. If using Terraform Cloud add Workspace variable
# with name TF_VAR_api_access_key_value for local Terraform export api_access_key_value or add a .tfvars file. 

variable "api_access_key_value" {
  type = string
  sensitive = true
}
